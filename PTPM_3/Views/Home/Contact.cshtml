
@{
    ViewData["Title"] = "Liên Hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container">
        <div class=" bg-secondary">
            <div class="col-md-6 m-auto text-center">
                <h1 class="h1">Liên Hệ</h1>
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Trang Chủ / Liên Hệ</a>
            </div>
        </div>

        <div class="container py-5">
            <div class="row py-5">
                <form class="col-md-9 m-auto" method="post" role="form">
                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label for="inputname">Tên</label>
                            <input type="text" class="form-control mt-1" id="name" name="Tên" placeholder="Tên">
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label for="inputemail">Email</label>
                            <input type="email" class="form-control mt-1" id="email" name="email" placeholder="Email">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="inputsubject">Vấn Đề</label>
                        <input type="text" class="form-control mt-1" id="subject" name="Vấn Đề" placeholder="Vấn Đề">
                    </div>
                    <div class="mb-3">
                        <label for="inputmessage">Tin Nhắn</label>
                        <textarea class="form-control mt-1" id="message" name="Tin Nhắn" placeholder="Tin Nhắn" rows="8"></textarea>
                    </div>
                    <div class="row">
                        <div class="col text-end mt-2">
                            <button type="submit" class="btn btn-success btn-lg px-3">Gửi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
